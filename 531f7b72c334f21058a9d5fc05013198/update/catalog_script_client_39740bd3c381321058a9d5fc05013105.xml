function onLoad() {
    var fieldName = 'work_start_tim0'; // 勤務開始時間フィールドの変数名に合わせて変更

    // 今月の月初 00:00:00 を作成
    var start = new GlideDateTime();         // 現在日時（クライアントTZ）
    start.setDayOfMonth(1);                  // 月初
    start.setTime('00:00:00');               // 時刻クリア

    // 来月の月初 00:00:00 を作成し、1秒戻して今月末 23:59:59 を得る
    var end = new GlideDateTime(start);      // コピー
    end.addMonthsUTC(1);                     // 来月へ（TZ差の影響を避けるならUTCで加算）
    end.addSecondsUTC(-1);                   // 1秒戻す → 今月最終日の 23:59:59

    // カレンダー選択可能範囲をセット
    g_form.setDateRange(fieldName, start, end);
}
]]></script>
